<%= form_with(model: [@employee,@experience],id:"editExpFormId", local: false) do |f| %>
  <div class = "container">
      <div class="row">
        <div class="col">
          <%=f.label :Role%>
          <%=f.text_field :role, class:"form-control", placeholder: "Role" %>
        </div>
        <div class="col">
          <%=f.label :Employement_Type%>
          <%=f.select(:employement_type, ['Select Type','Full-time', 'Part-time','Self-employed','Freelance','Internship','Trainee'], {},class:"form-control") %>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <%=f.label :Company_Name%>
          <%=f.text_field :company_name , class:"form-control", placeholder:"CompanyName" %>
        </div>
        <div class="col">
          <%=f.label :Location%>
          <%=f.text_field :location, class:"form-control", placeholder: "Location"%>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <%=f.label :Start_Date%>
          <%=f.date_field :start_date, class:"form-control", placeholder: "StartDate" %>
        </div>
        <div class="col">
          <%=f.label :End_Date%>
          <%=f.date_field :end_date, class:"form-control" ,placeholder: "EndDate" %>
        </div>
      </div>
  </div>
  <br/><br/>
  <div class="modal-footer">
    <button type="submit" class="btn btn-primary save-btn">Save</button>
  </div>
  <% end %>

