<%= form_for @certification do |form|%>
  <div class = "container">
    <div class="card">
      <div class="card-body">
          <div class="row">
            <div class="col">
              <div class= "field form-group">
                  <%= form.label :issued_by%>
                  <%= form.text_field :issued_by, class:"form-control" ,placeholder: "Issued_By"%>
              </div>
            </div>
            <div class="col">
              <div class= "field form-group">
                  <%= form.label :title%>
                  <%= form.text_field :title, class:"form-control" ,placeholder: "Title"%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <div class= "field form-group">
                  <%= form.label :issued_date%>
                  <%= form.date_field :issued_date, class:"form-control" ,placeholder: "Date"%>
              </div>
            </div>
            <div class="col">
              <div class= "field form-group">
                  <%= form.label :expiration_date%>
                  <%= form.date_field :expiration_date, class:"form-control" ,placeholder: "Date"%>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
<%end%>